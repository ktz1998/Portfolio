<div class="container">
  <h2 class="navbar">気になる製品を見てみよう</h2>
  <div class="mb-2">  <!--検索機能-->
    <%= search_form_for @q, url: search_items_path do |f| %>
      <%= f.search_field :name_cont, placeholder: '商品レビュー', class: "search-input" %>
      <%= f.submit '検索' %>
    <% end %>
  </div>
  <%= render "layouts/tag", tags: @tags %>  <!--タグ一覧表示-->
  <div class="row">
    <%= render "index", items: @items %>
  </div>
  <%= paginate @items %>
</div>
