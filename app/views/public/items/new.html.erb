<h1>新規投稿</h1>
  <%= form_with model: @item do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>製品名</h4>
      <%= f.text_field :name %>
    <h4>説明</h4>
      <%= f.text_area :description %>
    <h4>価格</h4>
    　<%= f.text_field :price %>
    <h4>レビュー</h4>
      <%= f.text_area :review %>

    <%= f.submit '投稿' %>
  <% end %>