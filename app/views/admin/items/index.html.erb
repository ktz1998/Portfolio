<div class="container">
  <h2 class="navbar">レビュー一覧</h2>
  
  <%= render "layouts/tag", tags: @tags %>  <!--タグ一覧表示-->
  <div class="row">
    <% @items.each do |item| %>
      <div class="mx-auto">
        <div class="card-deck">
          <div class="card" style="width: 15rem; height: 400px;">
            <div class="d-flex align-items-center justify-content-center" style="height: 200px;">
             <%= image_tag item.get_image(200,200) %>       
            </div>
            <div class="card-body">
              <%= link_to(item) do %>
                <h5 class="card-title margin-b0"><%= item.name %></h5>
              <% end %>
              <span class="star-rating margin-b0">
                <span class="star-rating-front" style="width: <%= getPercent(item.rate) %>%;">★★★★★</span>
                <span class="star-rating-back">★★★★★</span>
              </span>
              <p class="card-text">投稿者：<%= item.user.name %></p>
              
              <div>
              <% item.tags.each do |tag| %>
                <%= tag.tag_name %>
              <% end %>
              </div>
              
              <p>
                <span>
                  <%= link_to "削除", admin_item_path(item), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
                </span>
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @items %>
</div>
