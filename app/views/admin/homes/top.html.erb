<div class="container">
  <h3 class="pt-3">会員一覧</h3>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>会員名</th>
          <th>メールアドレス</th>
          <th>投稿数</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |u| %>
        <tr>
          <td><%= u.id %></td>
          <td><%= u.name %></td>
          <td><%= u.email %></td>
          <td><%= u.items.count %></td>
          <td>
            <% if u.is_deleted == false %>
              <p class="text-success">有効</p>
            <% else %>
              <p class="text-danger">無効</p>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% paginate @users %>
  
</div>